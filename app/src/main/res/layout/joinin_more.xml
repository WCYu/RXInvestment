<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f2"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px">

        <include layout="@layout/layout_title" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="40px"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_rxtitleicon" />
        </RelativeLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="402px">

                <ImageView
                    android:id="@+id/iv_morebanner"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_moretopbanner" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="88px"
                    android:gravity="center_vertical"
                    android:paddingLeft="30px"
                    android:text="瑞祥服务"
                    android:textSize="32px" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3px"
                    android:background="#f7f5f5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ly_hongbao"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_fuwu1"
                            android:layout_width="64px"
                            android:layout_height="64px"
                            android:layout_gravity="center"
                            android:layout_marginBottom="15px"
                            android:layout_marginTop="40px"
                            android:layout_weight="1"
                            android:src="@mipmap/more_redenvelopes" />

                        <TextView
                            android:id="@+id/tv_fuwu1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="40px"
                            android:gravity="center"
                            android:text="红包"
                            android:textSize="25px" />


                    </LinearLayout>

                    <View
                        android:layout_width="3px"
                        android:layout_height="match_parent"
                        android:background="#f7f5f5" />

                    <LinearLayout
                        android:id="@+id/ly_huitouke"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_fuwu2"
                            android:layout_width="64px"
                            android:layout_height="64px"
                            android:layout_gravity="center"
                            android:layout_marginBottom="15px"
                            android:layout_marginTop="40px"
                            android:layout_weight="1"
                            android:src="@mipmap/more_returnguest" />

                        <TextView
                            android:id="@+id/tv_fuwu2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="40px"
                            android:gravity="center"

                            android:text="回头客"
                            android:textSize="25px" />


                    </LinearLayout>

                    <View
                        android:layout_width="3px"
                        android:layout_height="match_parent"
                        android:background="#f7f5f5" />

                    <LinearLayout
                        android:id="@+id/ly_jiameng"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_fuwu3"
                            android:layout_width="64px"
                            android:layout_height="64px"
                            android:layout_gravity="center"
                            android:layout_marginBottom="15px"
                            android:layout_marginTop="40px"
                            android:layout_weight="1"
                            android:src="@mipmap/more_joinin" />

                        <TextView
                            android:id="@+id/tv_fuwu3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="40px"
                            android:gravity="center"
                            android:text="加盟推荐"
                            android:textSize="25px" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="20px"
                    android:background="#f7f5f5" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_touzi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="88px"
                    android:gravity="center_vertical"
                    android:paddingLeft="30px"
                    android:text="投资人服务"
                    android:textSize="32px" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3px"
                    android:background="#f7f5f5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ly_shangwu"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="64px"
                            android:layout_height="64px"
                            android:layout_gravity="center"
                            android:layout_marginBottom="15px"
                            android:layout_marginTop="40px"
                            android:layout_weight="1"
                            android:src="@mipmap/bus_image" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="40px"
                            android:gravity="center"
                            android:text="商务"
                            android:textSize="25px" />


                    </LinearLayout>

                    <View
                        android:layout_width="3px"
                        android:layout_height="match_parent"
                        android:background="#f7f5f5" />

                    <LinearLayout
                        android:id="@+id/ly_zhuan"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="64px"
                            android:layout_height="64px"
                            android:layout_gravity="center"
                            android:layout_marginBottom="15px"
                            android:layout_marginTop="40px"
                            android:layout_weight="1"
                            android:src="@mipmap/zhaoshangzhuan" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="40px"
                            android:gravity="center"
                            android:text="主案"
                            android:textSize="25px" />


                    </LinearLayout>

                    <View
                        android:layout_width="3px"
                        android:layout_height="match_parent"
                        android:background="#f7f5f5" />

                    <LinearLayout
                        android:id="@+id/ly_gongcheng"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="64px"
                            android:layout_height="64px"
                            android:layout_gravity="center"
                            android:layout_marginBottom="15px"
                            android:layout_marginTop="40px"
                            android:layout_weight="1"
                            android:src="@mipmap/engineering" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="40px"
                            android:gravity="center"
                            android:text="工程"
                            android:textSize="25px" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3px"
                    android:background="#f7f5f5" />

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ly_cailiaoshang"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="64px"
                            android:layout_height="64px"
                            android:layout_gravity="center"
                            android:layout_marginBottom="15px"
                            android:layout_marginTop="40px"
                            android:layout_weight="1"
                            android:src="@mipmap/science" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="40px"
                            android:gravity="center"
                            android:text="材料商"
                            android:textSize="25px" />


                    </LinearLayout>

                    <View
                        android:layout_width="3px"
                        android:layout_height="match_parent"
                        android:background="#f7f5f5" />

                    <LinearLayout
                        android:id="@+id/ly_jingli"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="64px"
                            android:layout_height="64px"
                            android:layout_gravity="center"
                            android:layout_marginBottom="15px"
                            android:layout_marginTop="40px"
                            android:layout_weight="1"
                            android:src="@mipmap/project_image" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="40px"
                            android:gravity="center"
                            android:text="项目经理"
                            android:textSize="25px" />
                    </LinearLayout>

                    <View
                        android:layout_width="3px"
                        android:layout_height="match_parent"
                        android:background="#f7f5f5" />

                    <LinearLayout
                        android:id="@+id/ly_renshi"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="64px"
                            android:layout_height="64px"
                            android:layout_gravity="center"
                            android:layout_marginBottom="15px"
                            android:layout_marginTop="40px"
                            android:layout_weight="1"
                            android:src="@mipmap/personnel_image" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="40px"
                            android:gravity="center"
                            android:text="人事"
                            android:textSize="25px" />

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3px"
                    android:background="#f7f5f5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ly_caiwu"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="64px"
                            android:layout_height="64px"
                            android:layout_gravity="center"
                            android:layout_marginBottom="15px"
                            android:layout_marginTop="40px"
                            android:layout_weight="1"
                            android:src="@mipmap/finance_image" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="40px"
                            android:gravity="center"
                            android:text="财务"
                            android:textSize="25px" />


                    </LinearLayout>

                    <View
                        android:layout_width="3px"
                        android:layout_height="match_parent"
                        android:background="#f7f5f5" />

                    <LinearLayout
                        android:id="@+id/ly_zijin"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="64px"
                            android:layout_height="64px"
                            android:layout_gravity="center"
                            android:layout_marginBottom="15px"
                            android:layout_marginTop="40px"
                            android:layout_weight="1"
                            android:src="@mipmap/capital_iamge" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="40px"
                            android:gravity="center"
                            android:text="资金"
                            android:textSize="25px" />
                    </LinearLayout>

                    <View
                        android:layout_width="3px"
                        android:layout_height="match_parent"
                        android:background="#f7f5f5" />

                    <LinearLayout
                        android:id="@+id/ly_gongsi"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="64px"
                            android:layout_height="64px"
                            android:layout_gravity="center"
                            android:layout_marginBottom="15px"
                            android:layout_marginTop="40px"
                            android:layout_weight="1"
                            android:src="@mipmap/zhaoshanggongsi" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="40px"
                            android:gravity="center"
                            android:text="公司"
                            android:textSize="25px" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>