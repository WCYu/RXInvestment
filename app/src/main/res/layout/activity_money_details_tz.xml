<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.rxjy.rxinvestment.activity.my.MoneyDetailsTzActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="342px">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="342px"
            android:scaleType="fitXY"
            android:src="@drawable/ic_wallettitlebg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/layout_title" />

            <LinearLayout
                android:id="@+id/ll_money"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center|bottom"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40px"
                    android:text="合计"
                    android:textColor="@color/colorWhite"
                    android:textSize="24px" />

                <TextView
                    android:id="@+id/tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40px"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="25px"
                    android:layout_marginTop="20px"
                    android:text="0.00"
                    android:textColor="@color/colorBG"
                    android:textSize="36px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40px"
                    android:text="(元)"
                    android:textColor="@color/colorWhite"
                    android:textSize="24px" />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <com.rxjy.rxinvestment.custom.MoneyDTzView
                android:id="@+id/mvt_one"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <com.rxjy.rxinvestment.custom.MoneyDTzView
                android:id="@+id/mvt_two"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <com.rxjy.rxinvestment.custom.MoneyDTzView
                android:id="@+id/mvt_three"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <com.rxjy.rxinvestment.custom.MoneyDTzView
                android:id="@+id/mvt_four"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <com.rxjy.rxinvestment.custom.MoneyDTzView
                android:id="@+id/mvt_five"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <com.rxjy.rxinvestment.custom.MoneyDTzView
                android:id="@+id/mvt_six"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <com.rxjy.rxinvestment.custom.MoneyDTzView
                android:id="@+id/mvt_seven"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
