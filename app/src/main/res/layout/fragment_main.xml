<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f2"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.1px"
                android:layout_marginTop="20px"
                android:background="@color/line1" />

            <RelativeLayout
                android:id="@+id/rl_persondetails"
                android:layout_width="fill_parent"
                android:layout_height="140px"
                android:background="@color/colorwhite">

                <ImageView
                    android:id="@+id/img_personicon"
                    android:layout_width="110px"
                    android:layout_height="100px"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20px"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_mainicon" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/img_personicon"
                    android:layout_marginLeft="40px"
                    android:layout_marginTop="12px"
                    android:layout_toRightOf="@+id/img_personicon"
                    android:text="姓名"
                    android:textColor="@color/text_black"
                    android:textSize="28px" />

                <TextView
                    android:id="@+id/tv_pjob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/tv_name"
                    android:layout_marginLeft="40px"
                    android:layout_toRightOf="@+id/tv_name"
                    android:text=""
                    android:textSize="28px" />

                <TextView
                    android:id="@+id/tv_paccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tv_name"
                    android:layout_below="@+id/tv_name"
                    android:layout_marginTop="15px"
                    android:text="账号"
                    android:textSize="28px" />

                <ImageView
                    android:id="@+id/img_erweima"
                    android:layout_width="30px"
                    android:layout_height="30px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="68px"
                    android:src="@mipmap/saoma"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="30px"
                    android:layout_height="30px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="18px"
                    android:src="@drawable/ic_go" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.1px"
                android:background="@color/line1" />


            <RelativeLayout
                android:id="@+id/rl_office"
                android:layout_width="fill_parent"
                android:layout_height="80px"
                android:layout_marginTop="20px"
                android:background="@color/colorwhite"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/img_office"
                    android:layout_width="35px"
                    android:layout_height="35px"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20px"
                    android:src="@drawable/ic_mine_noffice" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15px"
                    android:layout_toRightOf="@+id/img_office"
                    android:text="办公"
                    android:textSize="28px" />

                <ImageView
                    android:layout_width="30px"
                    android:layout_height="30px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="18px"
                    android:src="@drawable/ic_go" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_wallet"
                android:layout_width="fill_parent"
                android:layout_height="80px"
                android:layout_marginTop="20px"
                android:background="@color/colorwhite">

                <ImageView
                    android:id="@+id/img_wallet"
                    android:layout_width="35px"
                    android:layout_height="35px"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20px"
                    android:src="@drawable/ic_mine_nwallet" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15px"
                    android:layout_toRightOf="@+id/img_wallet"
                    android:text="钱包"
                    android:textSize="28px" />

                <ImageView
                    android:layout_width="30px"
                    android:layout_height="30px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="18px"
                    android:src="@drawable/ic_go" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_jifen"
                android:layout_width="fill_parent"
                android:layout_height="80px"
                android:layout_marginTop="1px"
                android:background="@color/colorwhite">

                <ImageView
                    android:id="@+id/img_jifen"
                    android:layout_width="35px"
                    android:layout_height="35px"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20px"
                    android:src="@drawable/ic_mine_njifen" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15px"
                    android:layout_toRightOf="@+id/img_jifen"
                    android:text="积分"
                    android:textSize="28px" />

                <ImageView
                    android:layout_width="30px"
                    android:layout_height="30px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="18px"
                    android:src="@drawable/ic_go" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_chengjiu"
                android:layout_width="fill_parent"
                android:layout_height="80px"
                android:layout_marginTop="1px"
                android:background="@color/colorwhite">

                <ImageView
                    android:id="@+id/img_chengjiu"
                    android:layout_width="35px"
                    android:layout_height="35px"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20px"
                    android:src="@drawable/ic_mine_ngrade" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15px"
                    android:layout_toRightOf="@+id/img_chengjiu"
                    android:text="成就"
                    android:textSize="28px" />

                <ImageView
                    android:layout_width="30px"
                    android:layout_height="30px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="18px"
                    android:src="@drawable/ic_go" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_informmessage"
                android:layout_width="fill_parent"
                android:layout_height="80px"
                android:layout_marginTop="20px"
                android:background="@color/colorwhite">

                <ImageView
                    android:id="@+id/img_informmessage"
                    android:layout_width="35px"
                    android:layout_height="35px"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20px"
                    android:src="@drawable/ic_mine_nmsg" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15px"
                    android:layout_toRightOf="@+id/img_informmessage"
                    android:text="消息"
                    android:textSize="28px" />

                <ImageView
                    android:layout_width="30px"
                    android:layout_height="30px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="18px"
                    android:src="@drawable/ic_go" />

                <TextView
                    android:id="@+id/tv_messagenum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/textView9"
                    android:background="@drawable/dotred"
                    android:gravity="center"
                    android:paddingBottom="4px"
                    android:paddingLeft="6px"
                    android:paddingRight="6px"
                    android:paddingTop="4px"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="16px"
                    android:visibility="gone" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_setting"
                android:layout_width="fill_parent"
                android:layout_height="80px"
                android:layout_marginTop="1px"
                android:background="@color/colorwhite">

                <ImageView
                    android:id="@+id/img_setting"
                    android:layout_width="35px"
                    android:layout_height="35px"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20px"
                    android:src="@drawable/ic_mine_nset" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15px"
                    android:layout_toRightOf="@+id/img_setting"
                    android:text="设置"
                    android:textSize="28px" />

                <ImageView
                    android:layout_width="30px"
                    android:layout_height="30px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="18px"
                    android:src="@drawable/ic_go" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>